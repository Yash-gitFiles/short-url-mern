<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: cursive;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>Url Generate : http://localhost:8001/<%= id %></p>
    <% } %>
    <div>
      <form method="post" action="/url">
        <label>Enter Your Original URL</label>
        <input
          type="text"
          name="originalURL"
          placeholder="https://example.com"
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>No</th>
          <th>Short Id</th>
          <th>Original URL</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.originalURL %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
